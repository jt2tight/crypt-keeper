<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <div class="form-control-login">
        <div class="form-header-login">
        <form method="POST" action="/new-password">
            <h1>Reset Password</h1>
            <div class="form-input">
                <input type="password" name="password" id="password" placeholder="New Password" value="">
            </div>

            <% if(errorMessage) { %>
            <div class="loginError"><%= errorMessage %></div>
            <% } %>
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn-login" type="submit">RESET</button>
            
        </div>
        </form>
    </div>
    
    <%- include('../includes/footer.ejs') %>  

</body>
<script src="/js/index.js"></script>
</html>